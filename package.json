{
  "name": "preact-express-template",
  "version": "1.0.0",
  "scripts": {
    "production": "yarn build && yarn server",
    "start": "concurrently 'yarn build:dev' 'yarn server:dev'",
    "server": "babel ./src/server -d ./src/server-babel && node ./src/server-babel/index.js",
    "server:dev": "babel-watch ./src/server/index.js",
    "build": "preact build --no-sw --src src/app",
    "build:dev": "preact watch --no-sw --src src/app --config preact.config.js --port 9091",
    "test": "jest",
    "lint": "eslint src",
    "prettier": "prettier --write '**/*.js'",
    "analyze": "source-map-explorer ./build/*.{js,map}"
  },
  "application": {
    "server": {
      "port": 9090
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.0",
    "morgan": "^1.9.1",
    "preact": "^10.0.1",
    "preact-render-to-string": "^5.1.0",
    "preact-router": "^3.0.0",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "babel-watch": "^7.0.0",
    "concurrently": "^5.1.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-synacor": "^3.0.5",
    "husky": ">=4",
    "identity-obj-proxy": "^3.0.0",
    "imagemin": "^7.0.1",
    "imagemin-jpegtran": "^6.0.0",
    "imagemin-optipng": "^7.1.0",
    "imagemin-svgo": "^7.0.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "lint-staged": "^10.0.7",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.0-rc.6",
    "preact-render-spy": "^1.2.1",
    "prettier": "^1.19.1",
    "source-map-explorer": "^2.2.2"
  },
  "lint-staged": {
    "*.{png,jpeg,jpg,svg}": [
      "node ./bin/minify-images.js",
      "git add"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "jest": {
    "preset": "jest-preset-preact",
    "notify": true,
    "notifyMode": "failure"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
